<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="65dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_receipt_24"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|start"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount :"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtBtmTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1,000,000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center|start"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_receipt_24"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|start"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultacy Type :"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtBtmType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1,000,000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center|start"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_receipt_24"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|start"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultacy Matter :"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtBtmMatter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1,000,000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center|start"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_calendar"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|start"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dates :"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtBtmDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1,000,000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center|start"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_clock"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|start"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Times :"
                android:layout_gravity="center|start"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtBtmTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.1,000,000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center|start"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBtmSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="SUBMIT"/>

</LinearLayout>