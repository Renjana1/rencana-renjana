<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rvConsultantImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/rvConsultantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/rvConsultantTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Textxtxtxt"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/rvConsultantDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'Ydfshjfkhsdjfhsd\nsdfhjsdkfhsdjkfh'"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/rvConsultantId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:visibility="gone"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>